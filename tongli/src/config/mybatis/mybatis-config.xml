		<typeAlias type="cn.com.softvan.bean.wechar.TcWxUserGroupsBean" alias="tcWxUserGroupsBean"/>
		<!-- entity class -->
		<typeAlias type="cn.com.softvan.dao.entity.wechar.TcWxMenu" alias="tcWxMenu"/>
		<typeAlias type="cn.com.softvan.dao.entity.wechar.TcWxPublicUser" alias="tcWxPublicUser"/>
		<typeAlias type="cn.com.softvan.dao.entity.wechar.TcWxInfo" alias="tcWxInfo"/>
		<typeAlias type="cn.com.softvan.dao.entity.wechar.TcWxUser" alias="tcWxUser"/>
		<typeAlias type="cn.com.softvan.dao.entity.wechar.TcWxUserGroups" alias="tcWxUserGroups"/>
		<!-- 微信后台模块 end--> 
		
		<!-- 系统管理模块 begin -->
		<!-- bean class -->
		<typeAlias type="cn.com.softvan.bean.sys.TcSysNewsBean" alias="tcSysNewsBean"/>
